{
  "name": "modular-chatbot",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@9.9.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n FRONT,BACK -c auto \"pnpm --filter @app/frontend dev\" \"pnpm --filter @app/backend dev\"",
    "build": "pnpm -r run build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "pnpm -r run test",
    "test:unit": "pnpm --filter @app/backend run test:unit && pnpm --filter @app/frontend run test:run",
    "test:e2e": "pnpm --filter @app/backend run test:e2e",
    "test:coverage": "pnpm --filter @app/backend run test:cov && pnpm --filter @app/frontend run coverage",
    "test:all": "pnpm run test:unit && pnpm run test:e2e",
    "prepare": "sh -c '[ -z \"$CI\" ] && husky || echo \"skip husky in CI\"'"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/node": "^20.14.11",
    "concurrently": "^9.0.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.40.0"
  },
  "pnpm": {
    "overrides": {
      "fastify": "5.5.0"
    }
  },
  "dependencies": {
    "@redis/graph": "^1.1.1",
    "@redis/json": "^5.8.2",
    "@redis/search": "^5.8.2"
  }
}
