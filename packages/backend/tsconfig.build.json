{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "types": ["node"],
    "skipLibCheck": true,

    "baseUrl": "../../",
    "paths": {
      "@app/shared": ["packages/shared/dist/index.d.ts"],
      "@app/shared/*": ["packages/shared/dist/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "test/**",
    "**/__tests__/**",
    "src/**/*.e2e-spec.ts",
    "jest.config.*",
    "**/*.md"
  ]
}
