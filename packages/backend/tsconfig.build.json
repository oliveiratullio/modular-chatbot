{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "types": ["node"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app/shared": ["../shared/src/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "test/**",
    "**/__tests__/**",
    "src/**/*.e2e-spec.ts",
    "jest.config.*",
    "**/*.md"
  ],
  "references": [{ "path": "../shared" }]
}
